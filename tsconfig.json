{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@molecules": ["src/app/components/molecules/index.ts"],
      "@organisms": ["src/app/components/organisms/index.ts"],
      "@services": ["src/app/services/index.ts"],
      "@store": ["src/app/store/index.ts"],
      "@test-helpers": ["src/app/test-helpers/index.ts"],
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
